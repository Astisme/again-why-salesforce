{
	"fmt": {
		"useTabs": true,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": false,
		"proseWrap": "preserve"
	},
	"tasks": {
		"test": "deno test -A",
		"fmt": "deno fmt --check --ignore=*.md --ignore=*/*.md",
		"lint": "deno lint",
		"dev-firefox": "node manifest/build-manifest.mjs firefox",
		"dev-chrome": "node manifest/build-manifest.mjs chrome",
		"dev-safari": "node manifest/build-manifest.mjs safari"
	},
	"imports": {
		"/": "./",
		"./": "./"
	},
    "test": {
        "include": ["tests/*"]
    }
}
